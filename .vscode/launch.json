  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch local server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "serve"],

      "serverReadyAction": {
        "pattern": "listening on.* (https?://\\S+|[0-9]+)",
        "action": "debugWithChrome",
        "webRoot": "${workspaceFolder}/public"
      }
    }
  ]
}
